<div class="container-lg min-height-calc adjusted-padding">
  <div class="mb-3">
    <%= link_to '< Retour au menu admin', admin_path, class: "admin-back-link" %>
  </div>
  <h1 class="w-100 text-center text-green">Liste des articles</h1>

  <div class="w-100 d-flex justify-content-center my-4">
    <%= link_to 'Ajouter un article', new_admin_article_path, class: "btn btn-primary" %>
  </div>

  <div class="row m-auto">
    <% @articles.each do |article| %>
      <div class="col-4 d-flex justify-content-center">
        <div class="card admin-article-card" style="width: 18rem;">
          <%= cl_image_tag article.photo.key, class: "card-img-top" %>
          <div class="card-body">
            <div class="d-flex align-items-center justify-content-center">
              <h5 class="text-green card-title text-clamp-2"><%= article.title %></h5>
            </div>
            <p class="primary-bold mb-2">Publié le : <%= article.created_at.strftime("%d/%m/%Y") %></p>
            <p class="card-text text-clamp-6"><%= article.content %></p>
          </div>
          <div class="admin-post-buttons">
            <%= !article.displayed ? "<i class='fas fa-eye-slash' style='color: red; margin: 10px;'></i>".html_safe : "<span></span>".html_safe %>
            <div>
              <%= link_to edit_admin_article_path(article) do %>
                <i class="admin-icon fas fa-pencil-alt" data-toggle="tooltip" data-placement="top" title="Éditer l'article"></i>
              <% end %>
              <%= link_to admin_article_path(article) do %>
                <i class="admin-icon fas fa-eye" data-toggle="tooltip" data-placement="top" title="Voir l'article"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


